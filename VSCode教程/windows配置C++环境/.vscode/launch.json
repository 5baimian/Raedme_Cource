{
    "version": "0.2.0",
    "configurations": [

        // Launch1: HelloWorld: "preLaunchTask": "HelloSingleCppG++Compile"

        //调试配置项1:用于配置 ​​GDB 调试器​​ 如何启动和调试 C++ 程序
        {
            "name": "HelloworldG++Launch",//调试配置的名称​​，显示在 VS Code 调试下拉菜单中。
            "type": "cppdbg",//调试器类型​​，表示使用 ​​C++ 调试器​​（基于 GDB）。
            "request": "launch",//调试模式​​，"launch" 表示启动新程序调试（而不是附加到已有进程）。
            "program": "${workspaceFolder}/single_cpp/build/hello_world.exe", //要调试的程序路径​​，使用工作区文件夹下的相对路径。
            "args": [], //程序启动时的命令行参数​​，这里为空数组表示不传递任何参数。
            "stopAtEntry": false,//是否在程序入口处停止​​，false 表示不停止，直接运行到断点或结束。
            "cwd": "${workspaceFolder}", //工作目录​​，使用工作区文件夹作为当前工作目录。
            "environment": [],//自定义环境变量​​，这里为空数组表示不设置额外的环境变量。
            "externalConsole": false,//是否使用外部终端​​，false 表示在 VS Code 内部终端运行程序。
            "MIMode": "gdb",//调试器模式​​，指定使用 GDB 作为调试器。
            "miDebuggerPath": "gdb",// GDB 调试器的路径​​，这里假设 GDB 已经在系统 PATH 中。

            //设置命令​​，用于配置 GDB 的行为。
            //GDB 初始化命令
            "setupCommands": 
            [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",//启用美观的变量显示（如格式化 STL 容器）
                    "ignoreFailures": true  //即使命令失败也不报错
                }
            ],

            //在 launch.json 中通过 preLaunchTask 字段直接调用 tasks.json 中定义的任务

            "preLaunchTask": "HelloworldSingleCppG++Compile"//指向 tasks.json 中的任务
        },
